<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".GiverFragment"
    android:orientation="vertical">
    <TextView
        android:id="@+id/login_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Taker Details"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/primary"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp"
            android:layout_marginBottom="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textColorHint="@color/hintColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee ID : "
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/giver_taker_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name : "
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/giver_taker_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"/>

                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Designation : "
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/giver_taker_designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Taker CUGNumber : "
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/giver_taker_CUGNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Substation Name : "
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/giver_taker_substation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Substation Feeder : "
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/giver_taker_substation_feeder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reason : "
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/giver_taker_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date &amp; Time : "
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/giver_taker_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work Done For LCP"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/workDone_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:hint="Line Close"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintColor"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:ems="15"/>
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/register_button"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:text="Give Permit"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center_horizontal"
                    app:cornerRadius="25dp"
                    android:backgroundTint="@color/black"
                    tools:ignore="MissingClass"
                    />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </ScrollView>

</LinearLayout>




